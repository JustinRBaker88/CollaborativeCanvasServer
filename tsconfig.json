{
  "compileOnSave": true,
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "lib": [ "es6", "dom"],
      "outDir": "dist",
      "baseUrl": "./src",
      "paths": {
          "*": [
              "./node_modules/*"
          ]
      }
  },
"include": [
    "./src/**/*"
  ]
}
